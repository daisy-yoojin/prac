<h1>수정 페이지 입니다.</h1>
<form action="/post/update/<%= @edit_post.id %>">
	<table>
		<tr>
			<td>제목: </td>
			<td><input type="text" name="title" value="<%= @edit_post.title%>"></td>
		</tr>
		<tr>
			<td>내용: </td>
			<td><input type="text" name="content" value="<%= @edit_post.content%>"></td>
		</tr>
	</table>
	<input type="submit" value="수정">

</form>


